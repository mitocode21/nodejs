<html>
  <head>
    <title>{{titulo}}</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet' />
  </head>
  <body>
    <div class="container">
      <h1>{{mensaje}}</h1>

      <table class="table table-striped">
        {{#each personas}}
          <tr>
            <td>{{this.id}}</td> 
            <td><a href="/persona/{{this.id}}">{{this.nombre}}</a></td> 
          </tr>          
       {{/each}}   
      </table>
    </div>
  </body>
</html>